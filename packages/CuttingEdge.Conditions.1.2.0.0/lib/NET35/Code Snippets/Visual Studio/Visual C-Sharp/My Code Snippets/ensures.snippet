	<CodeSnippet Format="1.0.0">
		<Header>
			<Title>Ensures</Title>
			<Shortcut>ensures</Shortcut>
			<Description>Code snippet for postcondition validation</Description>
			<Author>S. van Deursen</Author>
			<SnippetTypes>
				<SnippetType>Expansion</SnippetType>
			</SnippetTypes>
		</Header>
		<Snippet>
			<Declarations>
				<Literal>
					<ID>object</ID>
					<ToolTip>The name of the object to check</ToolTip>
					<Default>myArg</Default>
				</Literal>			
			</Declarations>
			<Code Language="csharp"><![CDATA[Condition.Ensures($object$, "$object$")$end$]]></Code>
		</Snippet>
	</CodeSnippet>
