<?xml version="1.0" encoding="utf-8"?>
<CodeSnippets xmlns="http://schemas.microsoft.com/VisualStudio/2005/CodeSnippet">
  <CodeSnippet Format="1.0.0">
    <Header>
      <SnippetTypes>
        <SnippetType>Expansion</SnippetType>
      </SnippetTypes>
      <Title>Requires</Title>
      <Author>Cutting Edge Internet Technologies</Author>
      <Description>Code snippet for argument validation</Description>
      <HelpUrl>
      </HelpUrl>
      <Shortcut>Requires</Shortcut>
    </Header>
    <Snippet>
      <References>
        <Reference>
          <Assembly>CuttingEdge.Conditions.dll</Assembly>
        </Reference>
      </References>
      <Imports>
        <Import>
          <Namespace>CuttingEdge.Conditions</Namespace>
        </Import>
      </Imports>
      <Declarations>
        <Literal Editable="true">
          <ID>argument</ID>
          <ToolTip>The argument to check</ToolTip>
          <Default>myArg</Default>
          <Function>
          </Function>
        </Literal>
      </Declarations>
      <Code Language="vb"><![CDATA[Condition.Requires($argument$, "$argument$")]]></Code>
    </Snippet>
  </CodeSnippet>
</CodeSnippets>